<table class="table table-hover my-4 container">
  <thead>
    <tr>
      <th scope="col">List</th>
      <th scope="col">Company</th>
      <th scope="col">Current Value</th>
      <th scope="col">More</th>
    </tr>
  </thead>
  <tbody>
  {{#each companies}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>€{{this.value}}</td>
      <td><a href="/products">Details</a></td>
    </tr>
  {{/each}}
  </tbody>
</table>


