<form class="container my-4">
  <div class="form-group">
    <label for="exampleFormControlInput1">&#9993;Your best Email address</label>
    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">Select subject matter</label>
    <select class="form-control" id="exampleFormControlSelect1">
      <option value="Business">Business</option>
      <option value="Events">Events</option>
      <option value="Meetings">Meetings</option>
      <option value="Techs information">Techs information</option>
      <option value="Other">Other</option>
    </select>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">&#9759;Write your message here</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-info btn-block">SEND EMAIL</button>
  </div>
</form>